<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EIIBD.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EIIBD"
    FlyoutWidth="170"
    Title="EIIBD">

    <Shell.MenuItemTemplate>
        <DataTemplate>
            <Grid>
                <Image Source="{Binding Icon}"
                       Aspect="AspectFit"
                       Margin="0,0,0,10"
                       />
            </Grid>
        </DataTemplate>
    </Shell.MenuItemTemplate>

    <ShellContent
        Shell.NavBarIsVisible="False"
        Shell.TabBarIsVisible="False"
        ContentTemplate="{DataTemplate local:PhotographPage}"
        Route="photograph" 
        FlyoutItemIsVisible="True"/>

    <MenuItem IconImageSource="purple_frame.png" />
    <MenuItem IconImageSource="Blue_frame.png" />

</Shell>
